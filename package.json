{
  "name": "artcrate",
  "version": "1.0.0",
  "description": "A production-ready NFT platform with creator rewards",
  "private": true,
  "workspaces": [
    "frontend",
    "contracts"
  ],
  "scripts": {
    "start": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
